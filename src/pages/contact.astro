---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../site.config';

// Form handling logic would go here (e.g., integration with Netlify Forms or an API endpoint)

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "Apex Hotel Furniture",
    "image": "https://apexhotelfurniture.com/logo.png",
    "email": siteConfig.contact.email,
    "telephone": siteConfig.contact.phone,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": siteConfig.contact.address,
      "addressLocality": "Foshan",
      "addressRegion": "Guangdong",
      "addressCountry": "CN"
    },
    "openingHoursSpecification": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday"
      ],
      "opens": "09:00",
      "closes": "18:00"
    }
  }
};
---

<Layout 
  title="Contact Apex Hotel Furniture | Get a Factory Quote" 
  description="Contact our team for custom hotel furniture quotes. Located in Foshan, China. Email: info@apexhotelfurniture.com."
  schema={schema}
>
  <!-- Hero -->
  <section class="relative py-24 bg-gray-900 flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-30">
       <img src="/images/banners/contact-hero.jpg" alt="Contact" class="w-full h-full object-cover" />
    </div>
    <div class="relative z-10 text-center max-w-4xl px-6">
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6">Contact Us</h1>
      <p class="text-gray-300 text-xl">Ready to start your project? Our team is here to help.</p>
    </div>
  </section>

  <div class="container mx-auto px-6 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      
      <!-- Contact Information -->
      <div>
        <h2 class="text-3xl font-serif font-bold text-primary mb-8">Get In Touch</h2>
        <p class="text-gray-600 mb-10 leading-relaxed">
          Whether you have a question about our manufacturing capabilities, need a quote for a project, or want to schedule a factory visit, we'd love to hear from you.
        </p>

        <div class="space-y-8">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-secondary">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-primary">Email Us</h3>
              <a href={`mailto:${siteConfig.contact.email}`} class="text-gray-600 hover:text-secondary block mt-1">{siteConfig.contact.email}</a>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-secondary">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-primary">Call Us</h3>
              <a href={`tel:${siteConfig.contact.phone}`} class="text-gray-600 hover:text-secondary block mt-1">{siteConfig.contact.phone}</a>
              <p class="text-sm text-gray-500 mt-1">Mon-Fri, 9am - 6pm (GMT+8)</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-secondary">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-primary">Visit Factory</h3>
              <p class="text-gray-600 mt-1">{siteConfig.contact.address}</p>
              <a href="https://maps.google.com" target="_blank" rel="noopener noreferrer" class="text-secondary font-medium text-sm mt-2 inline-block hover:underline">Get Directions &rarr;</a>
            </div>
          </div>
        </div>

        <div class="mt-12 p-6 bg-gray-50 rounded-lg border">
          <h4 class="font-bold text-primary mb-2">WhatsApp / WeChat</h4>
          <p class="text-gray-600 text-sm mb-4">Quick response for urgent inquiries.</p>
          <div class="flex items-center space-x-4">
             <a href={`https://wa.me/${siteConfig.contact.whatsapp}`} class="bg-[#25D366] text-white px-4 py-2 rounded-md text-sm font-bold hover:opacity-90 transition-opacity flex items-center">
               WhatsApp
             </a>
             <span class="text-gray-400">|</span>
             <span class="text-gray-600 font-medium">ID: ApexFurniture</span>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        <h2 class="text-2xl font-serif font-bold text-primary mb-6">Request a Quote</h2>
        <form class="space-y-6" action="#" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
              <input type="text" id="firstName" name="firstName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-secondary outline-none" required />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
              <input type="text" id="lastName" name="lastName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-secondary outline-none" required />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Business Email</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-secondary outline-none" required />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
            <input type="text" id="company" name="company" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-secondary outline-none" />
          </div>

          <div>
            <label for="projectType" class="block text-sm font-medium text-gray-700 mb-1">Project Type</label>
            <select id="projectType" name="projectType" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-secondary outline-none">
              <option value="">Select a project type...</option>
              <option value="Hotel Renovation">Hotel Renovation</option>
              <option value="New Hotel Construction">New Hotel Construction</option>
              <option value="Restaurant/Bar">Restaurant/Bar</option>
              <option value="Resort">Resort</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message / Project Details</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-secondary focus:border-secondary outline-none" placeholder="Please describe your project requirements, quantity, and timeline..."></textarea>
          </div>

          <button type="submit" class="w-full bg-primary text-white py-4 font-bold rounded-md hover:bg-gray-800 transition-colors shadow-md uppercase tracking-wide">
            Send Request
          </button>
          
          <p class="text-xs text-gray-500 text-center mt-4">
            By submitting this form, you agree to our <a href="/privacy" class="underline hover:text-secondary">Privacy Policy</a>.
          </p>
        </form>
      </div>

    </div>
  </div>
  
  <!-- Map Placeholder -->
  <div class="h-96 bg-gray-200 w-full relative">
     <div class="absolute inset-0 flex items-center justify-center text-gray-500 font-medium text-lg">
        Interactive Google Map Embed
     </div>
     <!-- Replace with actual Google Maps iframe -->
  </div>
</Layout>
