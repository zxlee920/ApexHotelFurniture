---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const categories = [
  { title: "Bedroom Furniture", image: "/images/products/cat-bedroom.jpg", href: "/catalog/bedroom" },
  { title: "Lobby Furniture", image: "/images/products/cat-lobby.jpg", href: "/catalog/lobby" },
  { title: "Restaurant Furniture", image: "/images/products/cat-restaurant.jpg", href: "/catalog/restaurant" },
  { title: "Outdoor Furniture", image: "/images/products/cat-outdoor.jpg", href: "/catalog/outdoor" },
  { title: "Custom Design", image: "/images/products/cat-custom.jpg", href: "/catalog/custom" },
  { title: "Furniture By Space", image: "/images/products/cat-by-space.jpg", href: "/catalog/by-space" },
];

const features = [
  { title: "Factory Direct", description: "Direct manufacturing with 20,000+ sqm facility ensures competitive pricing and quality control." },
  { title: "OEM & ODM Service", description: "Full customization capabilities from concept design to final production." },
  { title: "Global Experience", description: "Successful projects in over 50 countries, understanding diverse market standards." },
  { title: "Quality Guarantee", description: "Strict ISO9001 quality management system for long-lasting commercial furniture." },
];

const projects = [
  { name: "Hilton Garden Inn, Dubai", image: "/images/projects/hilton-dubai.jpg" },
  { name: "Marriott Resort, Maldives", image: "/images/projects/marriott-maldives.jpg" },
  { name: "Sheraton Grand, Sydney", image: "/images/projects/sheraton-sydney.jpg" },
];

// Get latest 3 insights
const allInsights = await getCollection('insights');
const latestInsights = allInsights
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Apex Hotel Furniture",
  "url": "https://apexhotelfurniture.com",
  "logo": "https://apexhotelfurniture.com/logo.png",
  "description": "Leading manufacturer of custom hotel furniture for global hospitality.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Foshan",
    "addressRegion": "Guangdong",
    "addressCountry": "CN"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+86-123-4567-8900",
    "contactType": "sales"
  },
  "sameAs": [
    "https://facebook.com/apexhotelfurniture",
    "https://instagram.com/apexhotelfurniture",
    "https://linkedin.com/company/apexhotelfurniture"
  ]
};
---

<Layout 
  title="Apex Hotel Furniture - Custom Hospitality Furniture Manufacturer" 
  description="Premier manufacturer of custom hotel furniture. Specialized in bespoke bedroom sets, lobby, and restaurant furniture for global hospitality brands."
  schema={schema}
>
  
  <!-- Hero Section -->
  <section class="relative h-[80vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/banners/home-hero.jpg" 
        alt="Luxury Hotel Bedroom" 
        class="w-full h-full object-cover brightness-[0.4]"
      />
    </div>
    <div class="relative z-10 text-center text-white w-full px-4">
      <h1 class="font-serif font-bold mb-8 leading-tight drop-shadow-md flex flex-col items-center justify-center">
        <!-- Line 1: White Serif -->
        <span class="block text-3xl md:text-5xl lg:text-6xl xl:text-7xl whitespace-nowrap mb-2">Elevating Every Guest Experience</span>
        <!-- Line 2: Gold Serif Italic -->
        <span class="block text-secondary font-serif italic text-2xl md:text-4xl lg:text-5xl xl:text-6xl whitespace-nowrap">with Bespoke Hospitality Design</span>
      </h1>
      <p class="text-lg md:text-xl mb-12 text-gray-100 max-w-2xl mx-auto font-light tracking-wide">
        Premier manufacturer of custom hotel furniture for the world's leading hospitality brands. From concept to installation.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-6">
        <a href="/catalog" class="bg-secondary text-white px-10 py-4 text-sm font-bold hover:bg-white hover:text-primary transition-all duration-300 uppercase tracking-widest">
          View Catalog
        </a>
        <a href="/contact" class="border-2 border-white text-white px-10 py-4 text-sm font-bold hover:bg-white hover:text-primary transition-all duration-300 uppercase tracking-widest">
          Start Your Project
        </a>
      </div>
    </div>
  </section>

  <!-- Introduction -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-serif font-bold mb-6">We Provide Hotel Furniture Solutions For Global Hospitality</h2>
      <p class="text-gray-600 max-w-3xl mx-auto text-lg leading-relaxed">
        Apex Hotel Furniture specializes in creating exceptional environments for hotels, resorts, and commercial spaces. 
        We combine aesthetic innovation with industrial durability to deliver furniture that stands the test of time and style.
      </p>
    </div>
  </section>

  <!-- Product Categories -->
  <section class="py-20 bg-accent">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Our Collections</h2>
        <div class="w-20 h-1 bg-secondary mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((cat) => (
          <a href={cat.href} class="group relative overflow-hidden block aspect-[4/3]">
            <img 
              src={cat.image} 
              alt={cat.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-black/30 group-hover:bg-black/50 transition-colors duration-300 flex items-center justify-center">
              <h3 class="text-white text-2xl font-serif font-bold border-b-2 border-transparent group-hover:border-secondary pb-1 transition-all duration-300">
                {cat.title}
              </h3>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-primary text-white">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-serif font-bold mb-8">Why Partner With Apex?</h2>
          <div class="space-y-8">
            {features.map((feature) => (
              <div class="flex items-start">
                <div class="flex-shrink-0 h-6 w-6 rounded-full bg-secondary mt-1"></div>
                <div class="ml-4">
                  <h4 class="text-xl font-bold mb-2">{feature.title}</h4>
                  <p class="text-gray-400">{feature.description}</p>
                </div>
              </div>
            ))}
          </div>
          <div class="mt-10">
            <a href="/about" class="text-secondary border-b border-secondary hover:text-white hover:border-white transition-colors pb-1">Learn more about our factory &rarr;</a>
          </div>
        </div>
        <div class="relative h-[500px]">
          <img 
            src="/images/misc/factory.jpg" 
            alt="Factory Production" 
            class="w-full h-full object-cover rounded-sm shadow-2xl"
          />
          <div class="absolute -bottom-6 -left-6 w-48 h-48 bg-secondary p-6 hidden md:flex flex-col justify-center items-center text-center">
             <span class="text-4xl font-bold block mb-1">15+</span>
             <span class="text-sm uppercase tracking-wider">Years Experience</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-end mb-12">
        <div>
           <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Featured Projects</h2>
           <p class="text-gray-600">Explore our recent work in luxury hospitality.</p>
        </div>
        <a href="/projects" class="hidden md:block px-6 py-2 border border-primary hover:bg-primary hover:text-white transition-colors">View All Projects</a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="group cursor-pointer">
            <div class="overflow-hidden mb-4">
              <img 
                src={project.image} 
                alt={project.name} 
                class="w-full aspect-[4/3] object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            <h3 class="text-xl font-bold group-hover:text-secondary transition-colors">{project.name}</h3>
            <p class="text-sm text-gray-500">Full Interior Furnishing</p>
          </div>
        ))}
      </div>
      
      <div class="mt-8 text-center md:hidden">
         <a href="/projects" class="px-6 py-2 border border-primary inline-block">View All Projects</a>
      </div>
    </div>
  </section>

  <!-- Latest Insights -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-end mb-12">
        <div>
           <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Latest Insights</h2>
           <p class="text-gray-600">Trends and knowledge from the hospitality furniture industry.</p>
        </div>
        <a href="/insights" class="hidden md:block text-secondary font-bold hover:text-primary transition-colors">View All Articles &rarr;</a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {latestInsights.map((post) => (
          <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 border group">
            <a href={`/insights/${post.slug}`} class="block aspect-[16/10] overflow-hidden">
              <img 
                src={post.data.image} 
                alt={post.data.title} 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </a>
            <div class="p-6">
              <div class="text-xs text-gray-500 mb-2">
                {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </div>
              <h3 class="text-xl font-bold mb-3 font-serif text-primary group-hover:text-secondary transition-colors">
                <a href={`/insights/${post.slug}`}>
                  {post.data.title}
                </a>
              </h3>
              <p class="text-gray-600 text-sm line-clamp-3 mb-4">{post.data.description}</p>
              <a href={`/insights/${post.slug}`} class="text-secondary text-sm font-bold uppercase tracking-wider hover:text-primary transition-colors">
                Read More
              </a>
            </div>
          </article>
        ))}
      </div>

      <div class="mt-10 text-center md:hidden">
         <a href="/insights" class="text-secondary font-bold">View All Articles &rarr;</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-secondary relative overflow-hidden">
    <div class="absolute inset-0 bg-primary/10"></div> <!-- Pattern overlay placeholder -->
    <div class="container mx-auto px-6 relative z-10 text-center">
      <h2 class="text-3xl md:text-5xl font-serif font-bold text-white mb-6">Ready to Transform Your Space?</h2>
      <p class="text-white/90 text-xl mb-10 max-w-2xl mx-auto">
        Contact our design specialists today for a consultation and quote for your hotel furniture project.
      </p>
      <a href="/contact" class="bg-white text-primary px-10 py-4 text-lg font-bold hover:bg-primary hover:text-white transition-all shadow-lg inline-block">
        Get a Free Quote
      </a>
    </div>
  </section>

</Layout>
