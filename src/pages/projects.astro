---
import Layout from '../layouts/Layout.astro';

const projects = [
  { 
    name: "Hilton Garden Inn", 
    location: "Dubai, UAE",
    type: "Business Hotel",
    scope: "Guest Rooms & Public Areas",
    year: "2023",
    image: "/images/projects/hilton-dubai.jpg"
  },
  { 
    name: "Marriott Resort & Spa", 
    location: "Maldives",
    type: "Resort",
    scope: "Villas & Outdoor Furniture",
    year: "2022",
    image: "/images/projects/marriott-maldives.jpg"
  },
  { 
    name: "Sheraton Grand", 
    location: "Sydney, Australia",
    type: "Luxury Hotel",
    scope: "Full FF&E",
    year: "2022",
    image: "/images/projects/sheraton-sydney.jpg"
  },
  { 
    name: "The Ritz-Carlton", 
    location: "Shanghai, China",
    type: "Luxury Hotel",
    scope: "Presidential Suites",
    year: "2021",
    image: "/images/projects/ritz-shanghai.jpg"
  },
  { 
    name: "Holiday Inn Express", 
    location: "London, UK",
    type: "Business Hotel",
    scope: "200 Guest Rooms",
    year: "2021",
    image: "/images/projects/holiday-inn-london.jpg"
  },
  { 
    name: "Hyatt Regency", 
    location: "Tokyo, Japan",
    type: "Business Hotel",
    scope: "Lobby & Restaurant",
    year: "2020",
    image: "/images/projects/hyatt-tokyo.jpg"
  }
];
---

<Layout title="Our Projects | Apex Hotel Furniture" description="Explore our portfolio of successful hotel furniture projects across the globe.">
  <section class="relative py-24 bg-gray-900 flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-30">
       <img src="/images/banners/projects-hero.jpg" alt="Projects" class="w-full h-full object-cover" />
    </div>
    <div class="relative z-10 text-center max-w-4xl px-6">
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6">Project Showcase</h1>
      <p class="text-gray-300 text-xl">Delivering excellence to the world's most prestigious hospitality brands.</p>
    </div>
  </section>

  <div class="container mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {projects.map((project) => (
        <div class="group cursor-pointer">
          <div class="relative overflow-hidden rounded-lg mb-6 aspect-[16/10]">
            <img 
              src={project.image} 
              alt={project.name} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-center text-white p-6 text-center">
              <p class="text-secondary font-bold uppercase tracking-wider text-sm mb-2">{project.scope}</p>
              <h3 class="text-2xl font-serif font-bold">{project.name}</h3>
            </div>
          </div>
          <div class="flex justify-between items-start">
            <div>
              <h3 class="text-xl font-bold text-primary group-hover:text-secondary transition-colors">{project.name}</h3>
              <p class="text-gray-600">{project.location}</p>
            </div>
            <div class="text-right">
              <span class="text-sm font-bold bg-gray-100 px-2 py-1 rounded text-gray-600">{project.type}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Clients Logo Section (Optional) -->
  <section class="py-16 bg-gray-50 mt-12">
    <div class="container mx-auto px-6 text-center">
       <p class="text-gray-500 font-medium uppercase tracking-widest mb-8">Trusted By Global Brands</p>
       <div class="grid grid-cols-2 md:grid-cols-4 gap-8 opacity-50">
          <div class="text-xl font-serif font-bold">HILTON</div>
          <div class="text-xl font-serif font-bold">MARRIOTT</div>
          <div class="text-xl font-serif font-bold">HYATT</div>
          <div class="text-xl font-serif font-bold">IHG</div>
       </div>
    </div>
  </section>
</Layout>
